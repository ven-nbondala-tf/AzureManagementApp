{
  "name": "azure-management-app",
  "version": "1.0.0",
  "description": "Azure Management Desktop Application - Modern UI for Azure resource management",
  "main": "dist/main/index.js",
  "author": "Azure Management Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5200 && electron .",
    "build": "tsc && vite build && electron-builder",
    "build:win": "tsc && vite build && electron-builder --win",
    "build:mac": "tsc && vite build && electron-builder --mac",
    "build:linux": "tsc && vite build && electron-builder --linux",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@azure/arm-authorization": "^9.0.0",
    "@azure/arm-costmanagement": "^1.0.0-beta.1",
    "@azure/arm-resources": "^5.0.0",
    "@azure/arm-subscriptions": "^5.0.0",
    "@azure/identity": "^4.0.0",
    "@headlessui/react": "^1.7.19",
    "@heroicons/react": "^2.2.0",
    "@microsoft/microsoft-graph-client": "^3.0.0",
    "@tanstack/react-query": "^5.62.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "electron-log": "^5.2.4",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.0.0",
    "electron-updater": "^6.3.9",
    "keytar": "^7.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "recharts": "^2.14.1",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.14",
    "@types/react-dom": "^18.3.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vitest": "^1.6.0",
    "wait-on": "^8.0.1"
  }
}
